<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:weightSum="3"
        tools:context=".LoginFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/login_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/login_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:adjustViewBounds="true"
                android:padding="@dimen/_30sdp"
                android:src="@drawable/layer_2"
                app:layout_constraintBottom_toBottomOf="@id/login_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/login_header" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/login_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/login_signIn_btn"
                style="@style/TextStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/gradient_btn_bg"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/_60sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_60sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/_16ssp"
                android:textStyle="normal"
                app:backgroundTint="@null"
                app:cornerRadius="@dimen/_30sdp"
                android:text="@string/sign_in_now" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/login_register_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:gravity="center_horizontal"
                android:lineSpacingMultiplier="0.34"
                android:paddingStart="@dimen/_75sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_75sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/register"
                android:textAllCaps="false"
                android:textColor="@color/light_orange"
                android:textSize="@dimen/_16ssp"
                android:textStyle="normal"
                android:typeface="normal"
                app:backgroundTint="@null"
                app:cornerRadius="@dimen/_30sdp"
                app:fontWeight="400" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:fontFamily="@font/calibri_light"
                android:gravity="center_horizontal"
                android:lineSpacingMultiplier="0.48"
                android:textColor="#322e2b"
                android:textSize="@dimen/_11ssp"
                android:textStyle="normal"
                tools:text="Terms and Conditions" />
        </LinearLayout>


    </LinearLayout>
</layout>