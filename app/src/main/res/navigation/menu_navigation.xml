<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_navigation"
    app:startDestination="@id/home_item">
    <fragment
        android:id="@+id/home_item"
        android:name="com.senior.sushiapp.ui.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_item_to_order_item"
            app:destination="@id/order_item" />
    </fragment>

    <fragment
        android:id="@+id/order_item"
        android:name="com.senior.sushiapp.ui.OrderFragment"
        android:label="@string/order"
        tools:layout="@layout/fragment_order">
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.senior.sushiapp.ui.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" />

</navigation>